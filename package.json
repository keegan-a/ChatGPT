{
  "name": "budget-desktop-suite",
  "version": "1.0.0",
  "description": "Retro budgeting desktop and mobile wrappers",
  "main": "electron/main.js",
  "author": "Budget Builder 95",
  "license": "MIT",
  "scripts": {
    "prepare:web": "node scripts/prepare-web.js",
    "electron:dev": "npm run prepare:web && electron .",
    "electron:serve": "npm run electron:dev",
    "electron:build": "node scripts/run-electron-build.js",
    "package:desktop": "npm run electron:build",
    "cap:init": "npm run prepare:web && npx cap sync",
    "cap:add:android": "npm run prepare:web && npx cap add android",
    "cap:add:ios": "npm run prepare:web && npx cap add ios",
    "cap:open:android": "npm run cap:init && npx cap open android",
    "cap:open:ios": "npm run cap:init && npx cap open ios",
    "package:android": "npm run cap:init && npx cap build android",
    "package:ios": "npm run cap:init && npx cap build ios",
    "dev:web": "npm run prepare:web && node scripts/serve-dev.js",
    "dev": "npm run prepare:web && node scripts/serve-dev.js",
    "start": "npm run prepare:web && node scripts/serve-dev.js",
    "build:web": "npm run prepare:web",
    "deploy:web": "npm run build:web && node scripts/deploy-web.js",
    "package:desktop:store": "npm run electron:build -- --mac dmg --mac mas --win nsis --win msix"
  },
  "devDependencies": {
    "@capacitor/cli": "5.6.3",
    "@capacitor/ios": "5.6.3",
    "electron": "^38.3.0",
    "electron-builder": "^24.6.4",
    "typescript": "^5.6.3",
    "ts-node": "^10.9.2",
    "@types/node": "^20.16.5"
  },
  "dependencies": {
    "@capacitor/android": "5.6.3",
    "@capacitor/core": "5.6.3",
    "@capacitor/preferences": "5.6.3",
    "@capacitor/share": "5.6.3"
  },
  "build": {
    "appId": "com.budgetbuilder.desktop",
    "productName": "BudgetBuilder95",
    "directories": {
      "output": "release"
    },
    "artifactName": "${productName} Setup ${version}-${arch}.${ext}",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      "dist"
    ],
    "publish": [],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "msix",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "dist/icons/budget95.ico",
      "publisher": "CN=YOUR COMPANY, O=Budget Builder Labs, C=US",
      "identityName": "BudgetBuilderLabs.BudgetBuilder95"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "mas",
          "arch": [
            "universal"
          ]
        }
      ],
      "icon": "dist/icons/budget95.icns",
      "category": "public.app-category.finance",
      "hardenedRuntime": true,
      "entitlements": "electron/entitlements.mac.plist",
      "entitlementsInherit": "electron/entitlements.mac.inherit.plist",
      "gatekeeperAssess": false
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "dist/icons"
    },
    "mas": {
      "entitlements": "electron/entitlements.mas.plist",
      "entitlementsInherit": "electron/entitlements.mas.inherit.plist",
      "category": "public.app-category.finance"
    }
  }
}